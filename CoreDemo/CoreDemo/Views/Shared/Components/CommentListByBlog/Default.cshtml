@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="comment-top">
    <h4>Comments</h4>
    @if (Model.Count() == 0)
    {
        <h1>
            No Comment. Do the first to comment.
        </h1>
    }
    @foreach (var x in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@x.CommentUserName</h5>
                <p>
                    @x.CommentContent
                </p>


            </div>
        </div>
    }
</div>