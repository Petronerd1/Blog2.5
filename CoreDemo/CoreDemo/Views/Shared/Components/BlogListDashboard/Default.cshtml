@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Last Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Title </th>
                                <th> Category </th>
                                <th> Date </th>
                                <th> Details </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                            <tr>
                                <td><img src="@x.BlogImage" class="mr-2" alt="image"></td>
                                <td>@x.BlogTitle</td>
                                <td>
                                    <label class="badge badge-gradient-success">@x.Category.CategoryName</label>
                                </td>
                                <td> @(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                <td> <a href="/Blog/BlogReadAll/@x.BlogId" class="btn btn-dark ">Detail</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>